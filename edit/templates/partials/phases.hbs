  goals='pending'
  deliverables='Design specs, pattern library updates, issues, stories and definition of success.'
  next-id='7'
  next-name='Feedback'
}}
  {{> phase
  id='7'
  name='Feedback'
  goals='pending'
  next-id='8'
  next-name='Quality Control'
}}
